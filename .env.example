# PostgreSQL connection
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=td_backend
DB_SYNCHRONIZE=true

# CORS
# Comma-separated list. Use "*" (or leave empty) to allow any origin (dev only).
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Surveys (auto-create response + email on form submitted/pending)
# Allowed values: MERCEDES-BENZ | ANDES MOTOR | STELLANTIS
SURVEY_DEFAULT_BRAND=MERCEDES-BENZ
# Public URL of the frontend used for survey links
FRONTEND_BASE_URL=http://localhost:4200

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com
